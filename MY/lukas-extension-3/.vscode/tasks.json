{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2} (AM|PM) - File change detected\\. Starting incremental compilation\\.\\.\\.",
          "endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2} (AM|PM) - (Compilation complete\\.|Found \\d+ errors?\\.)"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "npm: watch"
    },
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "build",
      "label": "npm: compile"
    },
    {
      "type": "npm",
      "script": "package",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "build",
      "label": "npm: package"
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "test",
      "label": "npm: lint"
    },
    {
      "type": "npm",
      "script": "test",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "test",
      "label": "npm: test"
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "rm -rf dist && npm run compile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "npm install",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}
