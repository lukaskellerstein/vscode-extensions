{
  "name": "lukas-extension-2",
  "displayName": "lukas-extension-2",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lukas-extension-2.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lukas-extension-2-sidebar",
          "title": "Lukas Extension",
          "icon": "$(tools)"
        }
      ]
    },
    "views": {
      "lukas-extension-2-sidebar": [
        {
          "type": "webview",
          "id": "lukas-extension-2.sidePanel",
          "name": "Side Panel"
        }
      ]
    },
    "configuration": {
      "title": "Lukas Extension",
      "properties": {
        "lukas-extension-2.viewLocation": {
          "type": "string",
          "default": "secondarySideBar",
          "description": "Preferred location for the extension view"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
